{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "data": {"url": "data/seattle-weather.csv"},
    "params": [{
      "name": "brush",
      "select": "interval",
      "encodings": ["x"],
      "views": ["bar-view"]
    }],
    "layer": [{
      "name": "bar-view",
      "mark": "bar",
      "encoding": {
        "x": {
          "timeUnit": "month",
          "field": "date",
          "type": "ordinal"
        },
        "y": {
          "aggregate": "mean",
          "field": "precipitation",
          "type": "quantitative"
        },
        "opacity": {
          "condition": {
            "param": "brush",
            "value": 1
          },
          "value": 0.7
        }
      }
    }, {
      "transform": [{
        "filter": {"param": "brush"}
      }],
      "mark": "rule",
      "encoding": {
        "y": {
          "aggregate": "mean",
          "field": "precipitation",
          "type": "quantitative"
        },
        "color": {"value": "firebrick"},
        "size": {"value": 3}
      }
    }]
  }
  
